language en_US.UTF-8

set nocompatible " be iMproved
set hidden " allow to switch between unsaved buffers
set autoread " automatically reload changes if detected

" Searching
set ignorecase
set smartcase
set incsearch
set hlsearch

" No spellchecking
set nospell
set spelllang=""

" Backup
set nowritebackup
set nobackup
set noswapfile

" Command mode
set wildmenu
set wildmode=full
set history=200

set clipboard=unnamed
set updatetime=300 " recommended by coc.nvim (default is 4000 ms)
