set nocompatible " be iMproved
set hidden " allow to switch between unsaved buffers
set autoread " automatically reload changes if detected
set noesckeys " do not wait after <esc>

" Searching
set ignorecase
set smartcase
set incsearch
set hlsearch

" No spellchecking
set nospell
set spelllang=""

" Backup
set nowritebackup
set nobackup
set noswapfile

" Command mode
set wildmenu
set wildmode=full
set history=200
